programa {
  funcao inicio() {
    // Declarando as variáveis
    real nota1, nota2, nota3, nota4, media, somaNotas;
    
    // Recebendo as notas
    escreva("Entre com a nota - 1 :");
    leia(nota1);
    escreva("Entre com a nota - 2 :");
    leia(nota2);
    escreva("Entre com a nota - 3 :");
    leia(nota3);
    escreva("Entre com a nota - 4 :");
    leia(nota4);
    
    // Somando as notas
    somaNotas = nota1 + nota2 + nota3 + nota4;
    
    // Calculando a média
    media = somaNotas / 4;
    
    // Exibindo o resultado
    escreva("Resultado dá média :", media);
  }
}
